extends layout

block content
	.container.content
		#row3.row
			#signup-wrapper.fullElement
				h1 Login
				ul
					if errors
						each e in errors
							div.alert.alert-success(role='alert')
								a.alert-link(href='#')=e.msg
				.reg-content
					form(name='sign-up-form', onsubmit='return validateSignUp()', method='POST' action='/users/login')
						input(type='text', name='username', placeholder='Username', required='')
						br
						input(type='password', name='password', placeholder='Password', required='')
						br
						br
						input#login-submit.button(type='submit', value='Submit')
						br
						br
