						h4 Saturday : #{avail[5].start} <i style='vertical-align:bottom;' class='material-icons'>arrow_forward</i> #{avail[5].end}
						h4 Sunday : #{avail[6].start} <i style='vertical-align:bottom;' class='material-icons'>arrow_forward</i> #{avail[6].end}
